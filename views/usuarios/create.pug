extends ../layout

block content
    .container.my-5
        .row
            .col.col-6.offset-2
                a.btn.btn-primary.my-5(href='/usuarios') Volver

                .card(style="width: 38rem;")
                    .card-header.text-center
                        h1  Nuevo Usuario
                    .card-body
                        form(action='/usuarios/create' method='post')
                            .form-group
                                label(for='nombre') Nombre:
                                input#nombre.form-control(type='text' name='nombre' value=usuario.nombre class=errors.nombre ? 'is-valid' : '')
                                if errors.nombre
                                    small#nombreHelp.text-danger= errors.nombre.message
                            
                            .form-group
                                label(for='email') Email:
                                input#email.form-control(type='text' name='email' value=usuario.email class=errors.email ? 'is-valid' : '')
                                if errors.email
                                    small#emailHelp.text-danger= errors.email.message
                            
                            .form-group
                                label(for='pwd') Password:
                                input#pwd.form-control(type='password' name='password' class=errors.password ? 'is-valid' : '')
                                if errors.password
                                    small#passwordHelp.text-danger= errors.password.message
                            
                            .form-group
                                label(for='confirm_pwd') Confirmar Password:
                                input#confirm_pwd.form-control(type='password' name='confirm_password' class=errors.confirm_password ? 'is-valid' : '')
                                if errors.confirm_password
                                    small#confirm_passwordHelp.text-danger= errors.confirm_password.message

                            br
                            br
                            input.btn.btn-primary(type='submit' value='OK')